<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ObstacleAvoid">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Obstacle Avoiding Mode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="105dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextIPoa"/>
    <WebView
            android:layout_width="396dp"
            android:layout_height="441dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/oaWebView"
            android:layout_marginTop="103dp" app:layout_constraintTop_toBottomOf="@+id/oabtnLoad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextIPoa" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="136dp" android:layout_marginRight="136dp" android:hint="IP Address"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"/>
    <Button
            android:text="Load"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/oabtnLoad" android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextIPoa" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ObstacleAvoid">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Obstacle Avoiding Mode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="105dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextIPoa"/>
    <WebView
            android:layout_width="396dp"
            android:layout_height="529dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/oaWebView"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/editTextIPoa"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="IP Adress"
            android:ems="10"
            android:id="@+id/editTextIPoa" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/oaWebView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"/>

</android.support.constraint.ConstraintLayout>
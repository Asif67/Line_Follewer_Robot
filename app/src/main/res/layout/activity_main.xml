<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Observing Robot Control Panel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.464" app:layout_constraintVertical_bias="0.148"
            android:textSize="18sp"/>
    <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Exit" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp" app:layout_constraintTop_toBottomOf="@+id/btn_ObstacleAvoding"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="168dp"
            android:layout_marginRight="168dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            android:layout_marginBottom="219dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Line Following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_LineFollowingMode"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_ManualControl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="155dp" android:layout_marginStart="155dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="168dp"
            android:layout_marginRight="168dp" android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_ObstacleAvoding"/>
    <Button
            android:text="Manual Control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ManualControl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="168dp" android:layout_marginRight="168dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_LineFollowingMode" android:onClick="btn_ManualControl_Click"/>
    <Button
            android:text="Obstacle Avoiding Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ObstacleAvoding" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_LineFollowingMode" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="168dp" android:layout_marginRight="168dp" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_Exit"/>

</android.support.constraint.ConstraintLayout>